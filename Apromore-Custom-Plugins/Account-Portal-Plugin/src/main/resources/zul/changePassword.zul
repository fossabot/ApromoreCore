<window id="win" width="400px" closable="false" position="center" title="Change password" sclass="ap-window-modal">
    <grid sclass="ap-grid ap-form">
        <columns>
            <column width="40%"/>
            <column width="60%"/>
        </columns>
        <rows>
            <row>
                <label value="User name"/>
                <label id="username" width="100%"/>
            </row>
            <row>
                <label value="Current password"/>
                <textbox id="currentPassword" type="password" value="" width="100%" tabindex="1"/>
            </row>
            <row>
                <label value="New password"/>
                <textbox id="newPassword" type="password" value="" width="100%" tabindex="2"/>
            </row>
            <row>
                <label value="Confirm password"/>
                <textbox id="confirmPassword" type="password" value="" width="100%" tabindex="3"/>
            </row>
            <row spans="2">
               <div sclass="ap-window-modal-actions">
                   <button id="changePasswordButton" label="Change password" iconSclass="z-icon-check-circle" type="submit"/>
                   <button id="cancelButton" label="Cancel" iconSclass="z-icon-times-circle"/>
               </div>
           </row>
        </rows>
    </grid>
</window>
