<window id="treeW" vflex="1" hflex="1" border="0" sclass="ap-navigation" style="padding:0">
    <style>
        .h-inline-block {
        display: inline-block;
        _display: inline;
        }

        .z-tree-icon {
        vertical-align: 2px;
        }

        .z-toolbarbutton-content>img, .z-toolbarbutton-content>i {
        margin-right: 2px;
        max-height: 22px;
        max-width: 22px;
        font-size: 16px;
        }
        .z-valign-middle>.z-hlayout-inner {
        vertical-align: -webkit-baseline-middle;
        }

        .z-treecol-content, .z-treecell-content, .z-treefooter-content {
        line-height: 18px;
        }

        .z-tree {
        background: #fff;
        overflow: hidden;
        zoom: 1;
        border: unset;
        }
    </style>
    <div class="z-west-header" height="40px" style="display: -webkit-flex; display: flex">
        <label style="color: unset; padding-top: 5px; font-weight: bold; -webkit-flex: 1; flex: 1" value="Folders"/>
        <toolbarbutton id="expand" image="/img/icon/svg/folder_exp.svg" tooltiptext="Expand all directories"/>
        <toolbarbutton id="contract" image="/img/icon/svg/folder_clo.svg" tooltiptext="Minimize all directories"/>
    </div>
    <vlayout style="overflow: auto">
        <tree id="tree">
            <treecols>
                <treecol label=""/>
            </treecols>
        </tree>
    </vlayout>
</window>
