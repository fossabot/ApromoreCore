        <borderlayout vflex="true" sclass="ap-portal-layout">
            <north height="40px" border="0" sclass="ap-header-region">
                <h:div class="ap-header">
                    <h:a href="/"><h:div class="ap-header-logo"></h:div></h:a>
                    <h:div class="ap-header-title">Portal</h:div>
                    <h:div class="ap-help">
                        <h:a href="https://apromore.org/documentation/features" target="_blank">
                            <h:button class="ap-icon ap-icon-help"/>
                        </h:a>
                    </h:div>
                </h:div>
            </north>
            <west id="leftPanel" title="Navigation" size="30%" collapsible="true" splittable="true" sclass="ap-portal-left-section" border="0">
                <borderlayout sclass="ap-left-layout">
                    <!--<north id="leftNorthPanel" sclass="ap-wrapper-search" height="0px" border="0"></north>-->
                    <center id="leftInnerCenterPanel" border="0" vflex="true" hflex="true" style="padding: 10px 3px 10px 10px;">
                        <Navigation id="navigationcomp" vflex="true" hflex="true" border="0" />
                    </center>
                    <south title="Process Details" size="25%" hflex="true" splittable="true" border="0">
                        <DetailView id="baseDetail" vflex="true" hflex="true" border="0" style="margin-left: 5px; margin-top: 5px"/>
                    </south>
                </borderlayout>
            </west>
            <center id="mainPanel" sclass="ap-portal-right-section" vflex="1" border="0">
                <vlayout vflex="1" sclass="ap-portal-right-content" spacing="0">
                    <Menu id="menucomp" style="background-color: unset" height="34px" width="100%"  />
                    <hbox id="pagingandbuttons" width="100%" spacing="0" sclass="ap-portal-menu-actions">
                        <paging sclass="ap-portal-paging" id="pg" width="150px" style="border: 0" />
                        <hbox sclass="ap-portal-menu-buttons" id="buttons" align="start" pack="start" width="300px" spacing="0">
                            <button sclass="ap-icon ap-icon-redo" id="refreshB" label="" image="img/icon/svg/refresh_icon.svg" tooltiptext="Reload data" />
                            <!--<button id="showVisualisation" label="" style="background: transparent; border:none" image="img/clustering.png" tooltiptext="Show Clustering" />-->
                            <button sclass="ap-icon ap-icon-folder-add" id="btnAddFolder" label="" image="img/icon/svg/folder_add.svg" tooltiptext="Create folder"/>
                            <button sclass="ap-icon ap-icon-bpmn-add" id="btnAddProcess" label="" image="img/icon/svg/add_process.svg" tooltiptext="Create model"/>
                            <button sclass="ap-icon ap-icon-trash" id="btnRemoveFolder" label="" image="img/icon/svg/delete_file.svg" tooltiptext="Delete" visible="true"/>
                            <button sclass="ap-icon ap-icon-rename" id="btnRenameFolder" label="" image="img/icon/svg/rename_icon.svg" tooltiptext="Rename" visible="true"/>
                            <!--<button id="btnGEDFolder" label="" style="background: transparent; border:none; cursor: pointer;" image="img/rename.png" tooltiptext="GED" visible="true"/>-->
                            <button sclass="ap-icon ap-icon-user-lock" id="btnSecurity" label="" image="img/icon/svg/security_icon.svg" tooltiptext="Access rights"/>
                        </hbox>
                        <SimpleSearch id="simplesearchcomp" hflex="1" border="0" />
                    </hbox>
                    <html id="folders" width="100%" visible="false" />
                    <tabbox id="tabbox" vflex="1">
                        <tabs id="tabs">
                            <tab label="Processes"/>
                        </tabs>
                        <tabpanels id="tabpanels">
                            <tabpanel vflex="1">
                                <BaseListbox id="baseListboxProcesses" vflex="1" width="100%" border="0"/>
                            </tabpanel>
                        </tabpanels>
                    </tabbox>
                </vlayout>

